FROM node:18-alpine AS builder

WORKDIR /app

# Copiar solo lo esencial
COPY package*.json ./
COPY vite.config.js ./

RUN npm ci

# Copiar código fuente
COPY src/ ./src/
COPY public/ ./public/

# Build de producción
RUN npm run build

# Verificar que no hay archivos en /auth/
RUN find dist -type f | grep -v "assets" && echo "✅ Build verificado"

FROM nginx:alpine

# Copiar configuración de nginx limpia
COPY nginx.conf /etc/nginx/nginx.conf

# Copiar build
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]